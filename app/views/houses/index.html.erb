<div class="housebody">

<section>
  
  <h2>Search for your house:</h2>
  <%= form_for houses_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

  <ul>
  <% for house in @houses %>  
    <li>
      <%= link_to house.name, house %>
    </li>
    <% end %>
  </ul>
</section>

<br>



<h1>Listing houses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip</th>
      <th>State</th>
      <th>Description</th>
      <th>Culture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
        <td><%= house.address %></td>
        <td><%= house.city %></td>
        <td><%= house.zip %></td>
        <td><%= house.state %></td>
        <td><%= house.description %></td>
        <td><%= house.culture %></td>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path %>
